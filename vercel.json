{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "headers": {
        "Access-Control-Allow-Origin": "*",  // Allow all origins or replace with your domain in production
        "Connection": "upgrade",
        "Upgrade": "websocket"
      },
      "dest": "/"
    }
  ]
}
